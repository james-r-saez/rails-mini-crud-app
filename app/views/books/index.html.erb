<h1>Favorite Books</h1>

<table>
<% @books.each do |book| %>
  <tr>
    <td><%= book.name %></td>
    <td><%= link_to 'Info', book_path(book) %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book_path(book),
            method: :delete,
            data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<br/>


<button><%= link_to 'Add new book', '/books/new' %></button>
<br />
<button><%= link_to 'See favorite movies', '/movies' %></button>
